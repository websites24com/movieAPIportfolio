<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Forgot password</title>
</head>
<body>

  <h1>Forgot password</h1>

  <div id="error"></div>
  <div id="ok"></div>

  <form id="forgot-form" autocomplete="on" novalidate>
    <div>
      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        required
        autocomplete="email"
      >
    </div>

    <button type="submit">Send reset link</button>
  </form>

  <p><a href="/login">Back to login</a></p>

  <!-- Use csrfFetch (same pattern as other pages) -->
  <script src="/js/csrfFetch.js"></script>
  <script src="/js/forgot-password.js"></script>
</body>
</html>
