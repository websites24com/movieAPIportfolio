# =========================================================
# Node.js / Express API .gitignore
# =========================================================

# Environment variables
.env
.env.local
.env.*.local

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime files
pids
*.pid
*.seed
*.pid.lock

# Coverage directory used by tools like istanbul
coverage

# Dependency directories
node_modules/

# Build output (if you add Babel or TypeScript later)
dist/
build/

# Temporary files
*.tmp
*.temp

# OS-generated files
.DS_Store
Thumbs.db

# IDE files
.vscode/*
.idea/
*.swp

# Serverless / misc
.serverless/
